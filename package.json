{
  "name": "boilerplate-api",
  "version": "1.0.0",
  "description": "A boilerplate of NodeJS with MVC architecture using Express, SocketIO, Sequelize ORM and Jest",
  "main": "src/server.js",
  "author": "Vincent Queimado",
  "license": "ISC",
  "private": true,
  "engineStrict": true,
  "engines": {
    "node": ">=14.0",
    "npm": ">=6.14"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": false,
    "silent": true,
    "modulePaths": [
      "<rootDir>"
    ]
  },
  "scripts": {
    "start": "node ./dist/server.js",
    "serve": "npm run build && node ./dist/server.js",
    "build": "babel src --out-dir dist",
    "dev": "cross-env NODE_ENV=development nodemon ./src/server.js --exec babel-node",
    "test": "cross-env NODE_ENV=development jest --testTimeout=10000 --detectOpenHandles",
    "migrate": "npx sequelize db:migrate",
    "migrate:undo": "npx sequelize db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "migrate:reset": "npm rum migrate:undo && npm run migrate && npm run seed"
  },
  "dependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/register": "^7.13.16",
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.4.4",
    "ansi-colors": "^4.1.1",
    "app-root-path": "^3.0.0",
    "axios": "^0.21.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-html-import-to-string": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chokidar": "^3.5.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-joi-validate": "^2.1.0",
    "express-session": "^1.17.1",
    "googleapis": "^52.1.0",
    "helmet": "^4.6.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.0",
    "npm": "^6.14.13",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "query-string": "^6.14.1",
    "rand-token": "^1.0.1",
    "rootpath": "^0.1.2",
    "sendgrid-template-helper": "^1.0.4",
    "sequelize": "^5.22.4",
    "serve-favicon": "^2.5.0",
    "shortid": "^2.2.16",
    "socket.io": "^2.4.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/node": "^7.13.13",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.1",
    "@babel/runtime": "^7.14.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "sequelize-cli": "^5.5.1",
    "supertest": "^6.1.3"
  }
}
